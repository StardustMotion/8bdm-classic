            
actor "8C Hero" : ClassBase {
    // private:
        +NOSKIN +NOMORPHLIMITATIONS
        var int user_8C_level;
    // public:
        player.forwardmove 0.88 player.sidemove 0.727
    states {
        spawn:
            MEGM A 0
            MEGM B 1
            MEGM A 1
            goto spawn+2
        see:
            MEGM BCDE 5
            goto spawn
            
        missile:
            MEGM F 5
            MEGM G 4
            goto spawn+2
        classPain: MEGM H 0
            goto megamanPain
        classDeath: MEGM H 0
            goto megamanDeath
            
        intro8C:
            3MEG A 0 A_GiveInventory("noInteractionOn")
            3MEG A 0 ACS_NamedExecuteWithResult("8C", SOLID_TOGGLE, false)
            3MEG A 0 A_Warp(AAPTR_DEFAULT, 0, 0, 760.0, 0, WARPF_NOCHECKPOSITION)
            TFOG A 0 A_ChangeVelocity(0,0,-40,CVF_REPLACE)
            TFOG A 18
            TFOG A 0 A_Warp(AAPTR_DEFAULT, 0, 0, -(z-floorz), 0, WARPF_NOCHECKPOSITION|WARPF_STOP)
            3MEG A 0 A_GiveInventory("noInteractionOff")
            3MEG A 0 ACS_NamedExecuteWithResult("8C", SOLID_TOGGLE, true)
            TNT1 A 0 A_SpawnItemEx("TeleportFogNormal",0,0,0,0,0,0,0,SXF_TRANSFERTRANSLATION)
            TFOG A 0 A_JumpIf(true, "intro8Cpose")
            goto intro8Cpose
        intro8Cpose:
            MAIL B 72 A_Log("Your hero does not have a intro8C or intro8Cpose state! Here's a placeholder mail box")
            TNT1 A 0 A_JumpIf(true, "spawn")
            goto spawn            
    }
}


actor "8C Camera" : watcher { states {
    spawn: TNT1 A 0
        TNT1 A 0 A_SpawnItemEx("8C Intro Camera",0,0,0, 0,0,0, 0,0,0, TID)
        stop}}

actor "8C Intro Camera" : gfx { radius 8 height 16 states {
    spawn: 
        TNT1 A 0 nodelay ACS_NamedExecuteWithResult("8C CS", 64)
    main: 
        TNT1 A 69 
        loop}}