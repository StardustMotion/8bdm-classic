actor "8C Big Eyeye" : "8C Mob" {
    painchance 256 +INVULNERABLE +NOGRAVITY height 27 radius 20 health 150 -SOLID states {
        onSpawn:            
            "----" A 0 ACS_NamedExecuteWithResult("8C", COPY_VELOCITY, AAPTR_MASTER)
            goto check
        check: 
            "----" A 0 A_JumpIfInventory("Once",1,"open",AAPTR_MASTER)
            BIGI U 0 A_ChangeFlag("INVULNERABLE", true)
        main: "----" A 1 A_Warp(AAPTR_MASTER,18,0,91,WARPF_NOCHECKPOSITION)
            "----" A 0 A_SetArg(0,args[0]-1)
            goto check

        pain: "----" A 0 A_SetArg(0,10) goto check
        open: TNT1 A 0 A_ChangeFlag("INVULNERABLE", false)
            BIGI W 0 A_JumpIf(args[0]>0, "hit")
            goto main
        hit: BIGI V 0
            goto main
        death: TNT1 A 0 A_GiveInventory("8C Undeflect", 1, AAPTR_MASTER)
            TNT1 A 0 A_KillMaster // oke masta les kill da hoe
            stop
    }
}

actor "8C Big Eye contact" : "8C Mob contact" {
    damage (45) PoisonDamage 0,0,0 damagetype "8CBigEye" 
    radius 48 height 80 accuracy -32
}
