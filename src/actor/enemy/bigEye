
actor "8C Big Eye" : "8C Mob"  {
    -COUNTKILL gravity 1.2 health 1
    obituary "$8C_OBIT_BIG_EYE"
    radius 26 height 120 
    meleerange 512 accuracy 4
        states { 
            onSpawn:
                BLAD A 0 A_GiveInventory("8C Deflect")
                BLAD A 0 A_SpawnItemEx("8C Big Eyeye",0,0,0, 0,0,0, 0,SXF_TRANSFERTRANSLATION|SXF_SETMASTER)
            idle:
                TNT1 A 0 A_TakeInventory("Once")
                BIGI X 5 A_LookEx(0,0,meleerange,meleerange,360,"see")
                loop
            see:
                BIGI X 0 A_GiveInventory("Once")
                BIGI X 0 A_FaceTarget
                BIGI X 0 A_SpawnItemEx("8C Big Eye contact")
                BIGI YZ 2
                BIGI Y 2 A_ChangeVelocity(accuracy,0,17 - !random(0,3)*5,CVF_RELATIVE|CVF_REPLACE)
                
            air:
                BIGI XXXX 1 A_JumpIf(CallACS("core_CheckFooting"), "stomp")
                BIGI X 0 A_ChangeVelocity(accuracy,0,velz,CVF_RELATIVE|CVF_REPLACE)
                goto air
            stomp:
                BIGI X 0 A_Stop
                BIGI X 0 A_PlaySoundEx("robot/bigeye", "Weapon")
                BIGI X 0 A_TakeInventory("8C follow me")
                BIGI X 0 ACS_NamedExecuteWithResult("EarthQuake", 2, 4, 384)
                BIGI YZY 4
                BIGI X 12
                goto sightCheck   
            death: TNT1 A 0 A_ChangeFlag("NOGRAVITY", true)
                BIGI X 4 A_FadeOut(0.5)
               BIGI X 4 A_FadeIn(0.5)
              BIGI X 4 A_FadeOut(0.5)
             BIGI X 4 A_FadeIn(0.5)
                stop             
        }
}

