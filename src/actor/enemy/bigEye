
actor "8C Big Eye" : "8C Enemy"  {
    -COUNTKILL gravity 1.2
    obituary "$8C_OBIT_BIG_EYE"
    radius 26 height 120 
    meleerange 512 accuracy 4
        states { 
            spawn:
                BLAD A 0 nodelay A_GiveInventory("8C Deflect On")
                BLAD A 0 A_SpawnItemEx("8C Big Eyeye",0,0,0, 0,0,0, 0,SXF_TRANSFERTRANSLATION|SXF_SETMASTER)
            idle:
                TNT1 A 0 A_TakeInventory("varBool")
                8CAA P 5 A_LookEx(0,0,meleerange,meleerange,360,"see")
                loop
            see:
                8CAA P 0 A_GiveInventory("varBool")
                8CAA X 0 A_FaceTarget
                8CAA X 0 A_SpawnItemEx("8C Big Eye contact")
                8CAA QR 2
                8CAA R 2 A_ChangeVelocity(accuracy,0,17 - !random(0,3)*5,CVF_RELATIVE|CVF_REPLACE)
                
            air:
                8CAA PPPP 1 A_JumpIf(CallACS("core_CheckFooting"), "stomp")
                8CAA X 0 A_ChangeVelocity(accuracy,0,velz,CVF_RELATIVE|CVF_REPLACE)
                goto air
            stomp:
                8CAA X 0 A_Stop
                8CAA X 0 A_PlaySoundEx("robot/bigeye", "Weapon")
                8CAA X 0 A_TakeInventory("8C follow me")
                8CAA X 0 ACS_NamedExecuteWithResult("8C", EARTHQUAKE, 2, 4, 384)
                8CAA QRQ 4
                8CAA P 12
                goto sightCheck   
            death: TNT1 A 0 A_ChangeFlag("NOGRAVITY", true)
                8CAA P 4 A_FadeOut(0.5)
               8CAA P 4 A_FadeIn(0.5)
              8CAA P 4 A_FadeOut(0.5)
             8CAA P 4 A_FadeIn(0.5)
                stop             
        }
}

