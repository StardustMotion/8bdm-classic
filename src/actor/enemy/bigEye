actor "8C Big Eyeye" : "8C Enemy" {
    painchance 256 +INVULNERABLE +NOGRAVITY height 27 radius 20 states {
        spawn:            
            "----" A 0 nodelay ACS_NamedExecuteWithResult("8C", C8_SOLID_TOGGLE, false)
            "----" A 0 ACS_NamedExecuteWithResult("8C", C8_COPY_VELOCITY, AAPTR_MASTER)
            "----" A 0 A_SetUserVar("user_colorId", CallACS("8C", C8_GET_USERVAR, AAPTR_MASTER))
            goto check
        check: 
            "----" A 0 A_JumpIfInventory("varBool",1,"open",AAPTR_MASTER)
            8CAA M 0 A_ChangeFlag("INVULNERABLE", true)
        main: "----" A 1 A_Warp(AAPTR_MASTER,18,0,91,WARPF_NOCHECKPOSITION)
            "----" A 0 A_SetArg(0,args[0]-1)
            goto check

        pain: "----" A 0 A_SetArg(0,10) goto check
        open: TNT1 A 0 A_ChangeFlag("INVULNERABLE", false)
            8CAA O 0 A_JumpIf(args[0]>0, "hit")
            goto main
        hit: 8CAA N 0
            goto main
        death: TNT1 A 0 A_GiveInventory("8C Deflect Off", 1, AAPTR_MASTER)
            TNT1 A 0 A_KillMaster // oke masta les kill da hoe
            stop
    }
}

actor "8C Big Eye contact" : "8C Enemy contact" { args 45, 64, 32 }